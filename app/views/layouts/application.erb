<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Kensington Soap Works</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tiny_mce_if_used %>
  <%= tiny_mce if using_tiny_mce? %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
	<div class="div_1">
			<div class="div_2">
				<%= yield %>
			</div>
	</div>
	<% if admin? %>
	<%= image_tag("footer_graphic.gif", :class => "footer_graphic") %>
	<%= link_to image_tag("logout.gif", :class => "logout"), session_path, {:method => :delete} %>
	<% @destroy %>
	<% else %>
	<%= link_to image_tag("footer_graphic.gif", :class => "footer_graphic"), :controller => "sessions", :action => "new" %>
	<% end %>
	<%= link_to image_tag("ksw_logo.png", :class => "header"), :controller => "intro" %>
	<!-- main links -->
	<% if controller.controller_name == "handmade" %>
	<%= link_to image_tag("handmade_roll.gif", :class => "link_1"), :controller => "handmade" %> 
	<% else %>
	<%= link_to image_tag("handmade.gif", :class => "link_1", :mouseover => "handmade_roll.gif"), :controller => "handmade" %> 
	<% end %>
	<% if controller.controller_name == "natural" %>
	<%= link_to image_tag("natural_roll.gif", :class => "link_2"), :controller => "natural" %> 
	<% else %>
	<%= link_to image_tag("natural.gif", :class => "link_2", :mouseover => "natural_roll.gif"), :controller => "natural" %> 
	<% end %>
	<% if controller.controller_name == "soapmaker" %>
	<%= link_to image_tag("soapmaker_roll.gif", :class => "link_3"), :controller => "soapmaker" %> 
	<% else %>
	<%= link_to image_tag("soapmaker.gif", :class => "link_3", :mouseover => "soapmaker_roll.gif"), :controller => "soapmaker" %> 
	<% end %>
	<% if controller.controller_name == "purchase" %>
	<%= link_to image_tag("purchase_roll.gif", :class => "link_4"), :controller => "purchase" %> 
	<% else %>
	<%= link_to image_tag("purchase.gif", :class => "link_4", :mouseover => "purchase_roll.gif"), :controller => "purchase" %> 
	<% end %>
	<!-- /main links -->
</body>
</html>